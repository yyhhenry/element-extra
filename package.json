    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.24.0",
    "npm-run-all": "^4.1.5",
